{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{css,scss,less,sss}": ["prettier-stylelint --write", "git add"],
    "src/**/*.{js,jsx,ts,tsx}": ["eslint --fix", "git add"],
    "src/**/*.{json,md}": ["prettier --write", "git add"]
  },
  "dependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "prettier-stylelint": "^0.4.2",
    "prop-types": "^15.7.2",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.4"
  }
}
